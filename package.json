{
  "name": "react-classmate",
  "description": "A tool for managing react component class names, variants and styles",
  "version": "1.0.15",
  "author": "https://github.com/richard-unterberg",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/richard-unterberg/react-classmate.git"
  },
  "workspaces": [
    "docs"
  ],
  "keywords": [
    "react",
    "classmate",
    "typescript",
    "dynamic-classnames",
    "dynamic-styles",
    "dynamic-variants",
    "css",
    "css-in-js",
    "utility-first",
    "utility-first-classnames",
    "classname",
    "classname-variants",
    "frontend",
    "ssr",
    "tailwind",
    "unocss"
  ],
  "license": "MIT",
  "type": "module",
  "scripts": {
    "========= Root": "",
    "clean": "rm -rf dist",
    "lefthook": "lefthook install",
    "========= Lib": "",
    "build": "npm run lefthook && npm run clean && npm run bundle && npm run postbuild && npm run test",
    "package": "npm run build && npm publish --access public",
    "postbuild": "npx tsx postbuild.ts",
    "bundle": "rollup -c",
    "========= Test": "",
    "test": "jest",
    "========= Docs": "",
    "docs": "cd docs/ && npm run dev",
    "docs:prod": "cd docs/ && npm run build && npm run preview",
    "docs:build": "cd docs/ && npm run build",
    "docs:preview": "cd docs/ && npm run preview"
  },
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.cjs.js",
      "import": "./dist/index.js"
    }
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.26.0",
    "@biomejs/biome": "1.9.4",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.2 ",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lefthook": "^1.10.1",
    "rollup": "^4.29.1",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-esbuild-minify": "^1.2.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}

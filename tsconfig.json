{
  "compilerOptions": {
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,
    "types": ["@testing-library/jest-dom", "node"],
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "outDir": "./dist",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src", "postbuild.ts"],
  "exclude": ["node_modules", "dist", ".localPack", "docs"]
}
